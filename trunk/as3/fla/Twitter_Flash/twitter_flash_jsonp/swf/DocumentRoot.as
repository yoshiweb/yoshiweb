package {		import flash.display.MovieClip;	import flash.external.ExternalInterface;	import flash.events.MouseEvent;	import fl.controls.Button;	import fl.controls.TextArea;		public class DocumentRoot extends MovieClip {				public var btn:Button;		public var txt:TextArea;				public function DocumentRoot () {			// 初期設定			ExternalInterface.addCallback("sendToActionScript", receivedFromJavaScript);			ExternalInterface.addCallback("sendToError", receivedFromJavaScriptError);			btn.addEventListener(MouseEvent.CLICK, _clickHandler);		}		// ボタンをクリックしたら		private function _clickHandler (event:MouseEvent):void {						// JavaScript経由でTwitterのデータを読み込み			if (ExternalInterface.available) {								txt.text = "Load...";								// JavaScriptの関数を実行				ExternalInterface.call("sendToJavaScript", "");			}		}		// JavaScriptからデータを取得		public function receivedFromJavaScript (json:Object):void {			var str:String = "";						var len:uint = json.length;			for(var i:uint = 0; i<len; i++){				var item:Object = json[i];				str += item.user.screen_name;				str += " : ";				str += item.text;				str += "\n\r";			}						txt.text = str;		}				// JavaScriptからエラーメッセージを取得		public function receivedFromJavaScriptError (str:String):void {			txt.text = str;		}	}	}